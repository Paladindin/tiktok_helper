<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_title_bar">

    <FrameLayout
        android:id="@+id/fl_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/rg_tab"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">

    </FrameLayout>


    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_tab_text"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="3dp"
            android:text="首页"
            android:textColor="@color/color_tab_selector"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_assistant"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_font"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="3dp"
            android:text="助手"
            android:textColor="@color/color_tab_selector"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_relationship"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_style"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="3dp"
            android:text="人脉"
            android:textColor="@color/color_tab_selector"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_personal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_color"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="3dp"
            android:text="我的"
            android:textColor="@color/color_tab_selector"
            android:textSize="10sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>